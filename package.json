{
  "name": "develop.for.static",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build-all",
    "dev": "npm-run-all dev-all",
    "dev:pc": "npm-run-all dev-all:pc",
    "dev:sp": "npm-run-all dev-all:sp",
    "dev-all": "npm run watch-ejs & npm run dev-postcss:pc & npm run dev-postcss:sp & npm run watch-stylelint & npm run dev-webpack & npm run start",
    "dev-all:pc": "npm run watch-ejs & npm run dev-postcss:pc & npm run dev-postcss:sp & npm run watch-stylelint & npm run dev-webpack & npm run start:pc",
    "dev-all:sp": "npm run watch-ejs & npm run dev-postcss:pc & npm run dev-postcss:sp & npm run watch-stylelint & npm run dev-webpack & npm run start:sp",
    "build-all": "npm run del && npm run files && npm run jsonFiles && npm run fonts && npm run pdf && npm run build-image && npm run ejs && npm run minify && npm run build-postcss:pc && npm run build-postcss:sp && npm run stylelint && npm run build-webpack",
    "del": "rimraf dist",
    "build-image": "gulp img",
    "files": "cpx \"files/*.{txt,html}\" dist",
    "jsonFiles": "cpx \"dev/**/*.json\" ./dist",
    "libs": "cpx dev/assets/libs/**/*.* dist/assets/libs",
    "fonts": "cpx \"dev/**/{*.eot,*.ttf,*.woff,*.woff2}\" ./dist",
    "pdf": "cpx dev/assets/pdf/*.pdf dist/assets/pdf",
    "ejs": "ejs-cli --base-dir dev/ejs/ '**/[^_]*.ejs' --out ./dist",
    "watch-ejs": "nodemon -e ejs,json -x npm run ejs",
    "dev-postcss:pc": "postcss dev/assets/css/pc/style.css -o dist/assets/css/style.pc.css -w",
    "dev-postcss:sp": "postcss dev/assets/css/sp/style.css -o dist/assets/css/style.sp.css -w",
    "build-postcss:pc": "postcss dev/assets/css/pc/style.css -o dist/assets/css/style.pc.css --no-map",
    "build-postcss:sp": "postcss dev/assets/css/sp/style.css -o dist/assets/css/style.sp.css --no-map",
    "dev-webpack": "webpack --mode=development --watch",
    "build-webpack": "webpack --mode=production",
    "minify": "for textfile in $( find dist/ -name \"*.html\" | grep -v /_ ); do html-minifier -c htmlminify.json ${textfile} -o ${textfile}; done",
    "stylelint": "stylelint --config .stylelintrc 'dev/assets/**/*.css'",
    "watch-stylelint": "onchange 'dev/assets/css/**/*.css' -e '**/*.DS_Store' -- npm run stylelint",
    "start": "browser-sync start --server './dist' --directory --files='./dist/**/*.html, ./dist/assets/**/*.css, ./dist/assets/**/*.js'",
    "start:pc": "browser-sync start --server './dist' --index 'index.pc.html' --files='./dist/**/*.html, ./dist/assets/**/*.css, ./dist/assets/**/*.js' --config bs.config.pc.js",
    "start:sp": "browser-sync start --server './dist' --index 'index.sp.html' --files='./dist/**/*.html, ./dist/assets/**/*.css, ./dist/assets/**/*.js' --config bs.config.sp.js"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.23.6",
    "connect-modrewrite": "^0.10.2",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "dom7": "^2.0.5",
    "ejs-cli": "github:shinguyuki/ejs-cli",
    "eslint": "^4.18.2",
    "eslint-loader": "^2.0.0",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "html-minifier": "^3.5.10",
    "imagemin-pngquant": "^5.1.0",
    "jquery": "^3.3.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "path": "^0.12.7",
    "path-to-regexp": "^2.2.1",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "postcss-reporter": "^5.0.0",
    "postcss-simple-vars": "^4.1.0",
    "prismic-dom": "^2.1.0",
    "prismic-javascript": "^1.5.0-beta.3",
    "require": "^2.4.20",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "swiper": "^4.2.2",
    "velocity-animate": "^1.5.1",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.0",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "vuejs-paginate": "^2.0.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.10"
  },
  "author": "easy-no-easy",
  "license": "ISC"
}
